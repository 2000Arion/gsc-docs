{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "pruneStaleBranches": true,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "updateTypes": ["major"],
      "enabled": true
    },
    {
      "matchPackageNames": ["node"],
      "updateTypes": ["minor", "patch"],
      "enabled": false
    }
  ]
}
